<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteLight"
    tools:context=".ProfileActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_menu_background"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="8dp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:itemIconTint="@color/bottom_nav_select"
        app:itemTextColor="@color/bottom_nav_select"
        app:labelVisibilityMode="labeled" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/t_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="26sp"
            android:textColor="@color/colorTextColor"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunitosans_bold"/>

        <TextView
            android:id="@+id/t_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/colorTextColorLight"
            android:gravity="center"
            android:layout_below="@id/t_username"
            android:fontFamily="@font/nunitosans_bold"/>

        <LinearLayout
            android:id="@+id/l_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_subtitle"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sorag"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextColorLight"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/nunitosans_bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t_correct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dogry"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextColorLight"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/nunitosans_bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t_wrong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/nunitosans_bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ÿalñyş"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextColorLight"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/nunitosans_bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/t_maglumatlar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maglumatlar"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="@color/colorTextColor"
            android:layout_below="@+id/l_stats"
            android:layout_marginTop="40dp"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/l_maglumatlar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t_maglumatlar"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/i_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_smartphone"/>

                <EditText
                    android:id="@+id/t_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+90543242"
                    android:fontFamily="@font/nunitosans_bold"
                    android:textSize="16sp"
                    android:background="@drawable/input_background"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/i_phone"
                    android:textColor="@color/colorTextColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="üÿtget"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:paddingHorizontal="20dp"
                    android:fontFamily="@font/nunitosans_bold_italic"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="right"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorTextColorLight"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_bag"/>

                <TextView
                    android:id="@+id/t_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 manat"
                    android:fontFamily="@font/nunitosans_bold"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorTextColor"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorTextColorLight"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_sale"/>

                <TextView
                    android:id="@+id/t_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 utuk"
                    android:fontFamily="@font/nunitosans_bold"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorTextColor"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorTextColorLight"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_placeholder"/>

                <TextView
                    android:id="@+id/t_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sorag yaz"
                    android:onClick="clickInsertQuestion"
                    android:fontFamily="@font/nunitosans_bold"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorTextColor"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:background="@color/colorTextColorLight"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:onClick="clickLogOut"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_on_off_button"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Çykyş"
                    android:fontFamily="@font/nunitosans_bold"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorTextColor"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorTextColorLight"/>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>